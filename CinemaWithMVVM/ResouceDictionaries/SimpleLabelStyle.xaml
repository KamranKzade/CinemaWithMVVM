<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SimpleLabel" TargetType="Label">
        <Setter Property="Content" Value="POUPULAR"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="FontSize" Value="{StaticResource labelSize}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="SimpleLabelWithForeGround" TargetType="Label">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource foreColorTitle}"/>
        <Setter Property="FontSize" Value="{StaticResource labelSize}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>